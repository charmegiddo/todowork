<%= simple_form_for @task, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :content, :label => "やること" %>
  <%= error_span(@task[:content]) %>
  <%= f.input :status, :label => "完了していたらチェック！" %>
  <%= error_span(@task[:status]) %>
  <%= f.input :term, as: :datetime_picker %>
  <%= error_span(@task[:term]) %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tasks_path, :class => 'btn btn-default' %>
<% end %>
